{
  "name": "duckdb-wasm-adapter",
  "version": "1.0.0",
  "private": true,
  "description": "Easy-to-use adapter components for DuckDB WASM across multiple frontend frameworks",
  "author": "Northprint",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/northprint/duckdb-wasm-adapter-component.git"
  },
  "bugs": {
    "url": "https://github.com/northprint/duckdb-wasm-adapter-component/issues"
  },
  "homepage": "https://github.com/northprint/duckdb-wasm-adapter-component#readme",
  "type": "module",
  "packageManager": "pnpm@10.14.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "pnpm -r --topological build",
    "dev": "pnpm -r --parallel dev",
    "test": "pnpm -r test",
    "test:coverage": "pnpm -r test:coverage",
    "lint": "eslint packages --ext .ts,.tsx,.js,.jsx",
    "lint:ci": "eslint packages --ext .ts,.tsx,.js,.jsx --max-warnings 250",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "size": "pnpm -r exec -- size-limit --json || true",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.6",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-svelte": "^2.46.1",
    "eslint-plugin-vue": "^9.33.0",
    "happy-dom": "^18.0.1",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "svelte-eslint-parser": "^1.3.1",
    "typescript": "^5.9.2",
    "vite-plugin-static-copy": "^3.1.1",
    "vitepress": "^1.6.4",
    "vitest": "^3.2.4"
  }
}