{
  "name": "@duckdb-wasm-adapter/react",
  "version": "1.0.0",
  "description": "React hooks for DuckDB WASM adapter",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
